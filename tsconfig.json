{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": ["__tests__/**/*", "**/dist", "**/node_modules"]
}
